{
  "name": "@trg_app/auth-server",
  "private": true,
  "version": "0.0.0",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "start:dev": "node dist/src/index.js",
    "test": "jest",
    "dev": "nodemon src/index.ts",
    "lint": "eslint . --ext ts",
    "db-auth:generate": "drizzle-kit --config=drizzle.auth.config.ts generate",
    "db-auth:migrate": "DB_MIGRATING=true drizzle-kit --config=drizzle.auth.config.ts migrate",
    "db-auth:drop": "drizzle-kit --config=drizzle.auth.config.ts drop",
    "db-auth:studio": "drizzle-kit --config=drizzle.auth.config.ts studio",
    "db-dashboard:generate": "drizzle-kit --config=drizzle.dashboard.config.ts generate",
    "db-dashboard:migrate": "DB_MIGRATING=true drizzle-kit --config=drizzle.dashboard.config.ts migrate",
    "db-dashboard:drop": "drizzle-kit --config=drizzle.dashboard.config.ts drop",
    "db-dashboard:studio": "drizzle-kit --config=drizzle.dashboard.config.ts studio --port 4893"
  },
  "devDependencies": {
    "@trg_package/config-typescript": "*",
    "@trg_package/eslint-config": "*",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.2",
    "@types/nodemailer": "^6.4.15",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.2",
    "drizzle-kit": "^0.24.2",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@trg_package/config-env": "*",
    "@trg_package/errors": "*",
    "@trg_package/express": "*",
    "@trg_package/schemas-auth": "*",
    "@trg_package/schemas-dashboard": "*",
    "@trg_package/schemas-reporting": "^1.0.0",
    "@trg_package/schemas-tally": "*",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "drizzle-orm": "^0.33.0",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.14",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "postgres": "^3.4.4",
    "zod": "^3.23.8"
  }
}
